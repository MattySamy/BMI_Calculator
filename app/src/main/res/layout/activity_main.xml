<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.MainActivity" android:background="#0F8DB2" android:backgroundTint="#0F91B9">

        <TextView
                android:id="@+id/textView_your_BMI"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="164dp"
                android:layout_marginEnd="16dp"
                android:text="Your BMI: "
                android:textColor="#263238"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <EditText
                android:id="@+id/editText_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:hint="Enter your name"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_your_BMI"
                style="@style/Widget.AppCompat.Light.AutoCompleteTextView" android:shadowColor="#FFFFFF"
                android:autofillHints="" android:textColorHint="#000000"/>

        <EditText
                android:id="@+id/editText_weight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:hint="Enter your weight in Kilogram"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editText_name" android:importantForAutofill="no"
                android:textColorHint="#000000"/>

        <EditText
                android:id="@+id/editText_height"
                android:layout_width="339dp"
                android:layout_height="58dp"
                android:ems="10"
                android:hint="Enter your height in Metres"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/editText_weight" tools:ignore="MissingConstraints"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:importantForAutofill="no"
                android:textColorHint="#000000"/>
        <Button
                android:id="@+id/button_calculate_BMI"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="16dp"
                android:text="Calculate BMI"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editText_height" app:layout_constraintHorizontal_bias="1.0"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Secondary"
                android:backgroundTint="#CB0E0E" android:backgroundTintMode="screen"
                app:icon="@android:drawable/presence_invisible" app:iconTint="#45FB04" app:iconTintMode="screen"
                app:strokeColor="@color/black" app:rippleColor="#FFFFFF" tools:text="Calculate BMI"
                android:textColor="#000000" android:textColorHighlight="#E21717" android:textColorLink="#CF2525"
                android:background = "#eeafffff"
                android:bottomRightRadius="20dp"
                android:bottomLeftRadius="20dp"
                android:topRightRadius="20dp"
                android:topLeftRadius="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>